        "/api/administration/projects": {
            "post": {
                "tags": [
                    "Proyectos"
                ],
                "summary": "Almacenar nuevo proyecto",
                "description": "Retorna OK si la operación fue correcta.",
                "operationId": "storeProject",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
